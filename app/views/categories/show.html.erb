<h1><%= @category.title %></h1>

<ul>
<% @category.items.each do |item| %>
  <li><%= link_to item.title, item_path(item) %> | <%=number_to_currency(item.price / 100.0)%></li>
    <% if user_signed_in? %>
      <%= form_tag "/line_items/#{item.id}" do %>
        <%= submit_tag "Add to Cart" %>
      <% end %>
    <% end %>
<% end %>
</ul>
